<Page x:Class="CourseProject_WPF_.View.PersonAreaPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CourseProject_WPF_.View"
      mc:Ignorable="d" 
      d:DesignWidth="600"
      d:DesignHeight="400"
      HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="{x:Null}"
      Title="PersonAreaPage">

    <Grid>
        <StackPanel Orientation="Vertical" DataContext="{Binding User}">
            <Label Width="100" Content="FirstName" />
            <TextBox x:Name="firstNameTextBox" Width="300" Margin="0,10,0,10" BorderThickness="2,2,2,2" Text="{Binding firstName}"/>
            <Label Width="100" Content="SecondName"/>
            <TextBox x:Name="secondNameTextBox" Width="300" Margin="0,10,0,10" BorderThickness="2,2,2,2" Text="{Binding secondName}"/>
            <Label Width="100" Content="Mail"/>
            <TextBox x:Name="mailTextBox" Width="300" Margin="0,10,0,10" BorderThickness="2,2,2,2" Text="{Binding mail}"/>
            <Label Width="100" Content="TelNumber"/>
            <TextBox x:Name="telNumberTextBox" Width="300" Margin="0,10,0,10" BorderThickness="2,2,2,2" Text="{Binding telNumber}"/>
            <Label Width="100" Content="About"/>
            <TextBox x:Name="aboutTextBox" Width="300" Margin="0,10,0,10" BorderThickness="2,2,2,2" Text="{Binding about}"/>
            <Button x:Name="saveChangesButton" Content="Save Changes" Width="150" Margin="0,30,0,0" Click="saveChangesButton_Click"/>
        </StackPanel>
    </Grid>
</Page>
