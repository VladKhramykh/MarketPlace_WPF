<Window x:Class="CourseProject_WPF_.View.AddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject_WPF_.View"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="AddWindow" Width="700" Height="1000" WindowStyle="None" WindowStartupLocation="CenterScreen" BorderThickness="2">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition/>
            <RowDefinition Height="80"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="Purple">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Background="{x:Null}" BorderThickness="0" Width="40"/>
                <Button Background="{x:Null}" BorderThickness="0" Width="40"/>
                <Button x:Name="closeButton" Background="{x:Null}" BorderThickness="0" Width="40" Click="closeButton_Click"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Label Content="Подача объявления" FontSize="20" HorizontalAlignment="Left" VerticalAlignment="Top" Height="35" Margin="100,40,0,0" Foreground="Gray"></Label>            
            <StackPanel Orientation="Vertical" Margin="100,80,100,0">
                <TextBox x:Name="nameTextBox" materialDesign:HintAssist.Hint="Название" Style="{StaticResource MaterialDesignFloatingHintTextBox}" Margin="0,20,0,0" BorderBrush="Purple" FontSize="18" SelectionBrush="MediumPurple" BorderThickness="0,0,0,2" />
                <ComboBox x:Name="categoryBomxoBox" materialDesign:HintAssist.Hint="Категория"  Margin="0,40,0,0" BorderBrush="Purple" FontSize="18"  BorderThickness="0,0,0,2" />
            </StackPanel>            
        </Grid>

        <Grid Grid.Row="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Width="120" Height="40" HorizontalAlignment="Center" Margin="40,0,40,0"/>
                <Button Width="120" Height="40" HorizontalAlignment="Center" Margin="40,0,40,0"/>
            </StackPanel>
            
        </Grid>
    </Grid>
</Window>
