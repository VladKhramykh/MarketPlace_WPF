<Window 
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CourseProject_WPF_"
        
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls" x:Class="CourseProject_WPF_.View.AuthWindow"
        
        mc:Ignorable="d"
        Title="MainWindow" Height="700" Width="500" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" WindowStyle="None">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="130*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="55*"/>
            <RowDefinition Height="132*"/>
        </Grid.RowDefinitions>



        <Grid Grid.Row="1">
            
        </Grid>

        <Grid Grid.Row="2">
            <Label Content="Логин" VerticalAlignment="Bottom" Margin="50,0,202,0" FontSize="20"/>
        </Grid>

        <Grid Grid.Row="3">
            <TextBox x:Name="loginTextBox" Margin="50,10,50,10" BorderBrush="Purple" FontSize="18" SelectionBrush="MediumPurple"/>
        </Grid>

        <Grid Grid.Row="4">
            <Label Content="Пароль" VerticalAlignment="Bottom" Margin="50,0,202,0" FontSize="20"/>
        </Grid>

        <Grid Grid.Row="5">
            <PasswordBox x:Name="passwordBox" PasswordChar="*" Margin="50,10,50,10"  BorderBrush="Purple" FontSize="18" SelectionBrush="MediumPurple"/>
        </Grid>

        <Grid Grid.Row="6" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid Grid.Column="0">
                <Button x:Name="regButton" Content="Регистрация" Margin="0,10,0,40" Width="150" Height="70" HorizontalAlignment="Center" Background="Purple" Foreground="White" FontSize="18" BorderBrush="{x:Null}" Click="regButton_Click"/>

            </Grid>
            <Grid Grid.Column="1">
                <Button x:Name="authButton" Content="Войти" Margin="0,10,0,40" Width="150" Height="70" HorizontalAlignment="Center"  Background="Purple" Foreground="White" FontSize="18" BorderBrush="{x:Null}" Click="authButton_Click"/>
            </Grid>
        </Grid>





        <Grid x:Name="GridBarTitle" Background="Purple" MouseDown="GridBarTitle_MouseDown">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button x:Name="collapseClose" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Width="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Click="collapseClose_Click" Height="Auto">
                    <materialDesign:PackIcon Kind="CollapseAll" Height="25" Width="25" />
                </Button>
                <Button x:Name="buttonClose" Style="{StaticResource MaterialDesignFloatingActionMiniAccentButton}" Width="50" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="White" Click="buttonClose_Click" Height="Auto">
                    <materialDesign:PackIcon Kind="Close" Height="25" Width="25" />
                </Button>
            </StackPanel>
        </Grid>
    </Grid>

</Window>
